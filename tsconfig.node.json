{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "declaration": false,
    "noEmit": false
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist"]
}
