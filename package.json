{
  "name": "brick-breaker-vibe-code",
  "version": "0.1.0",
  "description": "Brick Breaker 게임 - Vibe Coding 프로젝트",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "npm run build:client && tsx watch src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.node.json",
    "start": "node dist/server/index.js",
    "preview": "npm run build && npm run start"
  },
  "dependencies": {
    "express": "5.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "4.28.1"
  },
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "4.28.1",
    "@types/express": "5.0.0",
    "@types/node": "22.10.2",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vite": "5.4.11"
  }
}
